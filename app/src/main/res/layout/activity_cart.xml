<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.CartActivity">

    <TextView
            android:text="Your cart is empty"
            android:textColor="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/emptyTxt"
            app:layout_constraintBottom_toBottomOf="@+id/scrollViewCart"
            app:layout_constraintTop_toTopOf="@+id/scrollViewCart"
            app:layout_constraintEnd_toEndOf="@+id/scrollViewCart"
            app:layout_constraintStart_toStartOf="@+id/scrollViewCart" android:visibility="gone"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:id="@+id/backBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            tools:srcCompat="@drawable/arrow"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="-400dp"
            tools:layout_editor_absoluteX="58dp" android:id="@+id/scrollViewCart">
        <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Cart"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textColor="@color/blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/cardView"
                    android:clipToPadding="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:ems="10"
                        android:textSize="14sp"
                        android:textColorHint="@color/blue"
                        android:textColor="@color/blue"
                        android:layout_marginEnd="8dp"
                        android:hint="Enter Your Code "

                        android:id="@+id/editTextText"
                        android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatButton
                        android:text="Apply Coupon"
                        style="@android:style/Widget.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/red_button_background2"
                        android:id="@+id/button"
                        android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                    android:text="Oder summary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                    style="@android:style/Widget.Button"
                    android:layout_marginTop="16dp"
                    android:id="@+id/Placeoderbtn"
                    android:text="Place Order"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@drawable/red_button_background2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/grey_background"
                    android:layout_marginTop="16dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Subtotal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                />
                <TextView
                        android:text="Delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView8"
                        app:layout_constraintTop_toBottomOf="@+id/textView17"
                        app:layout_constraintStart_toStartOf="@+id/textView17"
                        android:layout_marginTop="8dp"/>
                <TextView
                        android:text="ToTal Tax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14"
                        app:layout_constraintTop_toBottomOf="@+id/textView8"
                        app:layout_constraintStart_toStartOf="@+id/textView8"
                        android:layout_marginTop="8dp"/>
                <TextView
                        android:text="$"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/totalFeeTxt"
                        app:layout_constraintTop_toTopOf="@+id/textView17"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
                <TextView
                        android:text="$"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/deliveryTxt"
                        app:layout_constraintTop_toBottomOf="@+id/totalFeeTxt"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="@+id/totalFeeTxt"
                />
                <TextView
                        android:text="$"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/taxTxt"
                        app:layout_constraintEnd_toEndOf="@+id/deliveryTxt"
                        app:layout_constraintTop_toBottomOf="@+id/deliveryTxt" android:layout_marginTop="8dp"/>
                <View
                        android:layout_width="0dp"
                        android:background="#ABABAB"
                        android:layout_height="1dp"
                        android:id="@+id/view4"
                        app:layout_constraintTop_toBottomOf="@+id/textView14"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:text="Total"
                        style="@style/textStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView20"
                        app:layout_constraintTop_toBottomOf="@+id/view4"
                        app:layout_constraintStart_toStartOf="@+id/textView14" android:layout_marginTop="8dp"
                />
                <TextView
                        android:text="$"
                        style="@style/textStyleBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/totalTxt"
                        app:layout_constraintTop_toTopOf="@+id/textView20" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginTop="16dp"
                    android:text="Place Order"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:background="@drawable/red_button_background2"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"/>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
